{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "type" : "object",
  "properties" : {
    "id" : {
      "type" : "string",
      "description" : "Entity unique uuid v4 identifier"
    },
    "type" : {
      "type" : "string",
      "enum" : [
        "channel_property",
        "device_property",
        "time",
        "date"
      ]
    },
    "enabled" : {
      "type" : "boolean",
      "default" : false
    },
    "is_fulfilled" : {
      "oneOf" : [
        {
          "type" : "null"
        },
        {
          "type" : "boolean"
        }
      ],
      "default" : null
    },
    "trigger" : {
      "type" : "string",
      "description" : "Trigger unique uuid v4 identifier"
    },
    "owner" : {
      "oneOf" : [
        {
          "type" : "null"
        },
        {
          "type" : "string"
        }
      ],
      "description" : "Entity owner uuid v4 identifier"
    }
  },
  "if" : {
    "properties" : {
      "type" : {
        "const" : "channel_property"
      }
    }
  },
  "then" : {
    "properties" : {
      "device" : {
        "type" : "string"
      },
      "channel" : {
        "type" : "string"
      },
      "property" : {
        "type" : "string"
      },
      "operand" : {
        "type" : "string"
      },
      "operator" : {
        "type" : "string",
        "enum" : [
          "eq",
          "above",
          "below"
        ]
      }
    },
    "required" : [
      "id",
      "type",
      "enabled",
      "trigger",
      "device",
      "channel",
      "property",
      "operand",
      "operator"
    ]
  },
  "else" : {
    "if" : {
      "properties" : {
        "type" : {
          "const" : "device_property"
        }
      }
    },
    "then" : {
      "properties" : {
        "device" : {
          "type" : "string"
        },
        "property" : {
          "type" : "string"
        },
        "operand" : {
          "type" : "string"
        },
        "operator" : {
          "type" : "string",
          "enum" : [
            "eq",
            "above",
            "below"
          ]
        }
      },
      "required" : [
        "id",
        "type",
        "enabled",
        "trigger",
        "device",
        "property",
        "operand",
        "operator"
      ]
    },
    "else" : {
      "if" : {
        "properties" : {
          "type" : {
            "const" : "time"
          }
        }
      },
      "then" : {
        "properties" : {
          "time" : {
            "type" : "string",
            "description" : "Ful time representation formatted in ATOM"
          },
          "days" : {
            "type" : "array",
            "items" : {
              "type" : "number",
              "uniqueItems" : true,
              "minItems" : 1
            },
            "description" : "Days numbers 1 - 7 where 1 is mon and 7 is sun"
          }
        },
        "required" : [
          "id",
          "type",
          "enabled",
          "trigger",
          "time",
          "days"
        ]
      },
      "else" : {
        "if" : {
          "properties" : {
            "type" : {
              "const" : "date"
            }
          }
        },
        "then" : {
          "properties" : {
            "date" : {
              "type" : "string",
              "description" : "Ful date representation formatted in ATOM"
            }
          },
          "required" : [
            "id",
            "type",
            "enabled",
            "trigger",
            "date"
          ]
        },
        "else" : {
          "required" : [
            "id",
            "type",
            "enabled",
            "trigger"
          ]
        }
      }
    }
  }
}
